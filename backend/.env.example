# ExtraShifty Backend Environment Configuration
# Copy this file to .env and update the values

# Project
PROJECT_NAME=ExtraShifty
DEBUG=false

# Security
# Generate with: openssl rand -hex 32
SECRET_KEY=changeme-in-production-use-openssl-rand-hex-32
ACCESS_TOKEN_EXPIRE_MINUTES=10080
ALGORITHM=HS256

# Database
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=extrashifty

# CORS (comma-separated list of allowed origins)
BACKEND_CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Email (optional)
SMTP_TLS=true
SMTP_SSL=false
SMTP_PORT=587
SMTP_HOST=
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=
EMAILS_FROM_NAME=ExtraShifty

# First superuser (created on startup)
FIRST_SUPERUSER_EMAIL=admin@extrashifty.com
FIRST_SUPERUSER_PASSWORD=changeme
