# ExtraShifty Backend Environment Configuration
# Copy this file to .env and update the values

# Project
PROJECT_NAME=ExtraShifty
DEBUG=false

# Security
# Generate with: openssl rand -hex 32
SECRET_KEY=changeme-in-production-use-openssl-rand-hex-32
REFRESH_SECRET_KEY=changeme-refresh-secret-key-different-from-access
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# Database
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=extrashifty

# CORS (comma-separated list of allowed origins)
# For production, include your frontend domain(s)
BACKEND_CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,https://extrashifty.com,https://www.extrashifty.com

# Email (optional)
SMTP_TLS=true
SMTP_SSL=false
SMTP_PORT=587
SMTP_HOST=
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=
EMAILS_FROM_NAME=ExtraShifty

# Stripe Connect
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PLATFORM_ACCOUNT_ID=

# First superuser (created on startup)
FIRST_SUPERUSER_EMAIL=admin@extrashifty.com
FIRST_SUPERUSER_PASSWORD=changeme
