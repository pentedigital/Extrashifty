# ExtraShifty Docker Compose Environment Configuration
# Copy this file to .env and update values for your environment

# =============================================================================
# Database
# =============================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=extrashifty

# =============================================================================
# Backend
# =============================================================================
DEBUG=false

# Security - IMPORTANT: Generate a unique key for production!
# Generate with: openssl rand -hex 32
SECRET_KEY=changeme-in-production-use-openssl-rand-hex-32

# Token expiration (in minutes) - default 7 days
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# CORS - comma-separated list of allowed origins
BACKEND_CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# =============================================================================
# First Superuser (created on startup)
# =============================================================================
FIRST_SUPERUSER_EMAIL=admin@extrashifty.com
FIRST_SUPERUSER_PASSWORD=changeme

# =============================================================================
# Email (optional)
# =============================================================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=
EMAILS_FROM_NAME=ExtraShifty

# =============================================================================
# Frontend
# =============================================================================
VITE_API_URL=http://localhost:8001
